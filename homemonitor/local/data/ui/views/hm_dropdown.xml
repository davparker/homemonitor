<form>
    <label>IP Address dropdown</label>

    <!-- define master search template, with replacement tokens delimited with $ -->
    <searchTemplate>index=homemonitor "$client_ip$"</searchTemplate>

    <fieldset>
        <!-- Define a simple dropdown form driven by a search -->
        <input type="dropdown" token="client_ip">
            <label>Select an IP address</label>
            <choice value="*">Any</choice>
            <populatingSearch fieldForValue="client_ip" fieldForLabel="client_ip"><![CDATA[index=homemonitor process="IN" | dedup client_ip | sistats count by client_ip]]></populatingSearch>
        </input>
    </fieldset>

    <row>
        <!-- output the results as a 50 row events view -->
        <event>
            <title>Results</title>
            <option name="count">50</option>
        </event>
    </row>
</form>
